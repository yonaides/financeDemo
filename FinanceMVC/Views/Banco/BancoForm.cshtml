@model FinanceMVC.ViewModel.BancoFormViewModel

@{
    ViewBag.Title = "BancoForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Titulo</h1>

@using (@Html.BeginForm("Save", "Banco"))
{
    @Html.ValidationSummary(true, "Complete los campos obligatorios")
    <div class="form-group">
        @Html.LabelFor(m => m.NombreBanco, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.NombreBanco, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NombreBanco)
    </div>

    @Html.HiddenFor(m => m.BancoId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary "> Guardar </button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}